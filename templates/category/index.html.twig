{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

{# {{ app.user.email }} #}

	<div class="col-12">
		{% if app.user.profile =="ROLE_SUP_ADM" %}
			
	<a href="{{ path('app_category_new') }}" class="btn btn-success mb-2">Ajouter engin</a>
		{% endif %}
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Liste des engins</h3>

				<div class="card-tools">
					<div class="input-group input-group-sm" style="width: 150px;">
						<input type="text" name="table_search" class="form-control float-right" placeholder="Search">

						<div class="input-group-append">
							<button type="submit" class="btn btn-default">
								<i class="fas fa-search"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
			<!-- /.card-header -->
			<div class="card-body table-responsive p-0">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>ID</th>
							<th>Categorie</th>
							<th>Description</th>
								{% if app.user.profile =="ROLE_SUP_ADM" %}
									
							<th>Action</th>
								{% endif %}
						</tr>
					</thead>
					<tbody>
						{% for item in categories %}
							<tr>
								<td>{{ loop.index }}</td>
								<td>{{ item.id }}</td>
								<td>{{ item.name }}</td>
								<td>{{ item.description }}</td>
{% if app.user.profile =="ROLE_SUP_ADM" %}
	
<td>
	<a href="{{ path('edit_category', {'id': item.id}) }}" class="fas fa-edit text-warning" title="modifier"></a>
</td>
{% endif %}
							</tr>

						{% endfor %}

					</tbody>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
{% endblock %}
