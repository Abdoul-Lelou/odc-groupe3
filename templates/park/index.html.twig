{% extends 'base.html.twig' %}

{% block title %}Park index
{% endblock %}

{% block body %}
	<div class="col-12">
		<a href="{{ path('app_park_new') }}" class="btn btn-success mb-2">Ajouter park</a>
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Liste des parks</h3>

				{# <div class="card-tools">
					<div class="input-group input-group-sm" style="width: 150px;">
						<input type="text" name="table_search" class="form-control float-right" placeholder="Search">

						<div class="input-group-append">
							<button type="submit" class="btn btn-default">
								<i class="fas fa-search"></i>
							</button>
						</div>
					</div>
				</div> #}
			</div>
			<!-- /.card-header -->
			<div class="card-body table-responsive p-0">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>ID</th>
							<th>Park</th>
							<th>Adresse</th>
							<th>telephone</th>
							<th>Heure Ouvr</th>
							<th>Heure Ferm</th>
							<th>Categorie Park</th>
							<th>Manager</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for item in parks %}
							<tr>
								<td>{{ loop.index }}</td>
								<td>{{ item.id }}</td>
								<td>{{ item.name }}</td>
								<td>{{ item.adresse }}</td>
								<td>{{ item.phone }}</td>
								<td>{{ item.open|date('d/m | h:m:s') }}</td>
								<td>{{ item.close|date('d/m | h:m:s') }}</td>
								<td>{{ item.categorie }}</td>
								<td class="d-flex justify-content-center">
									{% if item.user != null %}
										<a href="#">{{ item.user.firstName }}</a>

									{% else %}
										<a href="{{ path('app_add_gestionaire', {'id': item.id}) }}" class="fas fa-user-circle mt-1 text-success"></a>
									{% endif %}
								</td>

								<td>
									{# ajout-place #}
									<a href="{{ path('app_park_edit', {'id': item.id}) }}" class="fas fa-edit text-secondary" title="add manager"></a>
									|
									<a href="{{ path('app_park_show', {'id': item.id}) }}" class="fas fa-location-arrow text-warning" title="place"></a>
									|
									<a href="{{ path('app_park_delete', {'id': item.id}) }}" class="fas fa-trash text-danger"  title="supprimer"></a>

								</td>
							</tr>

						{% endfor %}

					</tbody>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
{% endblock %}
