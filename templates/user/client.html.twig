  <a href="{{ path("app_register")}}" class="btn btn-success mb-2">Ajouter utilisateur</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Phone</th>
                <th>Profile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        
        {% for user in users %}
          {% if user.profile !="ROLE_SUP_ADM" and user.profile !="ROLE_GEST"  %}
          {% if is_granted("ROLE_SUP_ADM") or is_granted("ROLE_GEST")  %}
          <tr>
              <td>{{ user.id }}</td>
              <td>{{ user.email }}</td>
              <td>{{ user.firstname }}</td>
              <td>{{ user.lastname }}</td>
              <td>{{ user.phone }}</td>
              <td>{{ user.profile }}</td>
              <td>
                  <a href="{{ path('app_user_show', {'id': user.id}) }}" class="fas fa-eye "></a>
                  |
                  <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="fas fa-edit text-warning"></a>
              </td>
          </tr>
          {% endif %}
          {% endif %}
        {% else %}
            <tr>
                <td colspan="9">Vous n'avez pas de client</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



