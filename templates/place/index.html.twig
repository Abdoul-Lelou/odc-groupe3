{% extends 'base.html.twig' %}

{% block title %}Liste des places{% endblock %}

{% block body %}
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Liste des places</h3>

				<div class="card-tools">
					<div class="input-group input-group-sm" style="width: 150px;">
						<input type="text" name="table_search" class="form-control float-right" placeholder="Search">

						<div class="input-group-append">
							<button type="submit" class="btn btn-default">
								<i class="fas fa-search"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
			<!-- /.card-header -->
			<div class="card-body table-responsive p-0">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>ID</th>
								{% if app.user.profile =="ROLE_SUP_ADM" or app.user.profile =="ROLE_GEST" %}
									
							<th>Code</th>
								{% endif %}
							<th>Park</th>
							{# <th>User</th> #}

                            <th>Status</th>
							{% if app.user.profile =="ROLE_SUP_ADM" %}
								
							<th>Action</th>
							{% endif %}	
						</tr>
					</thead>
					<tbody>
						{% for place in places %}
							<tr>
								<td>{{ loop.index }}</td>
								<td>{{ place.id }}</td>
									{% if app.user.profile =="ROLE_SUP_ADM" or app.user.profile =="ROLE_GEST" %}
									
								<td>{{ place.code }}</td>
									{% endif %}
								<td>{{ place.park.name }}</td>	
								{# <td>{{ place.user }}</td>	 #}

								{# <td>{{ place.user.firstname }}</td> #}
								{% if place.isDisponible %}
								<td class="badge bg-success">Disponible</td>
									{% else %}
								<td class="badge bg-danger">Occup√©e</td>
								{% endif %}	
                                {# <td>{{ place.isDisponible }} </td> #}
								{% if app.user.profile =="ROLE_SUP_ADM" %}
									{% if place.isDisponible %}
										<td> <a href="{{ path('app_stationnement_place', {'id':place.id}) }}" class="btn btn-success">+ stationnement</a></td>
									{% else %}
										<td><a href="{{path('app_out',{'id':place.id}) }}" class="btn btn-success">Sortie de stationnement</a></td>
							
									{% endif %}
								{% endif %}
                                
                                    
                                
							</tr>

						{% endfor %}

					</tbody>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
{% endblock %}
