{% extends 'base.html.twig' %}

{% block title %}Liste des stations{% endblock %}

{% block body %}
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Liste des stations</h3>

				<div class="card-tools">
					<div class="input-group input-group-sm" style="width: 150px;">
						<input type="text" name="table_search" class="form-control float-right" placeholder="Search">

						<div class="input-group-append">
							<button type="submit" class="btn btn-default">
								<i class="fas fa-search"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
			<!-- /.card-header -->
			<div class="card-body table-responsive p-0">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Place</th>
							<th>Marque</th>
							<th>Couleur</th>
                            <th>Matricule</th>								
							<th>Client</th>
                            <th>Entr√©e</th>
                            <th>Sortie</th>    
						</tr>
					</thead>
					<tbody>
						{% for station in stations %}
                        
                        {# {{ "now"|date("m/d/Y") }} #}
                            {% if station.user.profile =="ROLE_USER" and station.createdAt |date('d-m-Y') < "now"|date("d-m-Y")  %}
                                
                           
							<tr>
								<td>{{ loop.index }}</td>
								<td>{{ station.place.code }}</td>
									
								<td>{{ station.marque }}</td>
                                <td>{{station.couleur}}</td>
								<td>{{ station.immatriculation }}</td>	
								<td>{{station.user}}</td>
								<td>{{station.createdAt |date('d-m-Y')}}</td>
								<td>{{station.dateOutAt |date('d-m-Y')}}</td>
                                
                                    
							</tr>
                        {% endif %}
						{% endfor %}

					</tbody>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
{% endblock %}
